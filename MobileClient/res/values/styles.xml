<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    
     <!-- hocus pocus -->
    <style name="HocusPocusButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/hocuspocus_button</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="HocusPocusSlider" parent="@android:style/Widget.SeekBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/hocuspocus_seekbar_progress</item>
        <item name="android:indeterminateDrawable">@android:color/transparent</item>
        <item name="android:minHeight">825dip</item>
        <item name="android:maxHeight">825dp</item>
        <item name="android:thumb">@android:color/transparent</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <!-- hocus pocus -->
</resources>